{
  "info" : 
  {
    "name" : "${qooxdoo.application.name}",

    "summary" : "${qooxdoo.application.summary}",
    "description" : "${qooxdoo.application.description}",
    
    "homepage" : "http://some.homepage.url/",

    "license" : "SomeLicense",
    "authors" : 
    [
      {
        "name" : "First Author (uid)",
        "email" : "first.author@some.domain"
      }
    ],

    "version" : "${project.version}",
    "qooxdoo-versions": ["${qooxdoo.sdk.version}"]
  },
  
  "provides" : 
  {
    "namespace"   : "${qooxdoo.application.namespace}",
    "encoding"    : "${project.build.sourceEncoding}",
    "class"       : "${qooxdoo.application.sourceDirectory}",
    "resource"    : "${qooxdoo.application.resourcesDirectory}",
    "translation" : "${qooxdoo.application.translationDirectory}",
    "type"        : "application"
  }
}

